{
  "manifest_version": 3,
  "name": "YouTube Fullscreen Chat Overlay",
  "version": "1.0.0",
  "description": "Show YouTube live chat as an overlay while video is in fullscreen.",
  "permissions": ["storage"],
  "action": {
    "default_title": "Overlay Settings",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content-parser.js", "content-renderer.js", "content.js"],
      "run_at": "document_idle"
    }
  ]
}
